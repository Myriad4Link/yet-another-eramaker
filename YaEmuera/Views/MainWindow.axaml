<Window xmlns="https://github.com/avaloniaui"        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        xmlns:vm="clr-namespace:YaEmuera.ViewModels"        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"        x:Class="YaEmuera.Views.MainWindow"        x:DataType="vm:MainWindowViewModel"        Icon="/Assets/avalonia-logo.ico"        Title="yaEmuera"        DataContext="{StaticResource Composition}">    <Design.DataContext>        <!-- 这里我有意见😡 -->        <!-- 因为DI是发生在运行时的，所以在预览阶段Preview是没法被注入的。 -->        <!-- 所以要不就放弃Preview，要不就花点功夫写Mock类。 -->        <!-- 两种都很烦人啊但是😡😡😡 -->        <vm:MainWindowViewModel />        <!-- _____ -->        <!-- |　D | -->        <!-- |　I |_________ -->        <!-- | 缠 |   预    | -->        <!-- | 运 |   览　  | -->        <!-- | 行 |　 未    | -->        <!-- ‾‾‾‾|　 至    |____ -->        <!--     |  MOCK  | 弃 | -->        <!--     |　 先    | 留 | -->        <!--     |　 迎    | 皆 | -->        <!--     ‾‾‾‾‾‾‾‾‾| 叹 |      | -->        <!--              | 声 |      | -->        <!--              ‾‾‾‾‾       | -->        <!--                         最 -->        <!--                         神 -->        <!--                         笔 -->    </Design.DataContext>    <Window.Resources>        <SolidColorBrush x:Key="TextBoxForeground" Color="{Binding TextBoxForegroundColorProperty}" />        <SolidColorBrush x:Key="TextBoxBackground" Color="{Binding TextBoxBackgroundColorProperty}" />        <SolidColorBrush x:Key="TextBoxBorderBrushBackground" Color="{Binding TextBoxBorderBackgroundColorProperty}" />    </Window.Resources>    <!-- 也是很神必的Styles了 -->    <Window.Styles>        <Style Selector="TextBox">            <Setter Property="Background" Value="{DynamicResource TextBoxBackground}" />            <Setter Property="Foreground" Value="{DynamicResource TextBoxForeground}" />            <Setter Property="IsReadOnly" Value="True" />            <Setter Property="Focusable" Value="False" />            <Setter Property="CornerRadius" Value="0" />            <Style Selector="^:pointerover">                <Setter Property="Foreground" Value="{DynamicResource TextBoxForeground}" />                <Style Selector="^ /template/ Border#PART_BorderElement">                    <Setter Property="Background" Value="{DynamicResource TextBoxBorderBrushBackground}" />                    <Setter Property="BorderBrush" Value="{DynamicResource TextBoxBorderBrushBackground}" />                </Style>                <Style Selector="^ /template/ DockPanel">                    <Setter Property="Background" Value="{DynamicResource TextBoxBackground}" />                </Style>            </Style>        </Style>    </Window.Styles>    <DockPanel>        <Grid DockPanel.Dock="Top">            <Grid.ColumnDefinitions>                <ColumnDefinition Width="*" />                <ColumnDefinition Width="Auto" />            </Grid.ColumnDefinitions>            <Menu Grid.Column="0" Height="27" Margin="0,0,5,0">                <MenuItem Header="Files(_F͟)" />                <MenuItem Header="Help(_H͟)" />            </Menu>            <TextBlock Grid.Column="1" HorizontalAlignment="Right" Text="yaEmuera α" VerticalAlignment="Center"                       Margin="0,0,5,0" />        </Grid>        <TextBox>            你好        </TextBox>    </DockPanel></Window>